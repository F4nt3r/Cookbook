@model Cookbook.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
    </dl>
    <h2>Ingredients</h2>
    <ul>
        @foreach (var ingredient in Model.Ingredients)
        {
            <li>@ingredient.Quantity - @ingredient.Name</li>
        }
    </ul>
    <h3>Video Tutorial</h3>
    @if (!string.IsNullOrEmpty(Model.VideoId))
    {
        <iframe width="400" height="200" src="https://www.youtube.com/embed/@Model.VideoId" frameborder="0" allowfullscreen></iframe>
    }
    <h3>Image</h3>
     <img src="@Model.ImageUrl" alt="@Model.Title" width="400"><br/>
   

        
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
